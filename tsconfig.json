{
  "compilerOptions": {
    "target": "es2020", // allows async/await
    "module": "nodenext", // allows top-level await
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}