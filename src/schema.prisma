generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  walletAddress String         @unique
  role          String         @default("user")
  lastLogin     DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  smartAccounts SmartAccount[]
}

model SmartAccount {
  id               String     @id @default(uuid())
  userId           String
  privateKey       String
  address          String     @unique
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  ownerAddress     String?
  deployed         Boolean    @default(false)
  deployedAt       DateTime?
  deploymentTxHash String?
  portfolio        Portfolio?
  user             User       @relation(fields: [userId], references: [id])
}

model Delegation {
  id               String    @id @default(cuid())
  smartAccountId   String    @unique
  delegatorAddress String
  delegateAddress  String
  expiresAt        DateTime?
  revoked          Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  signature        Json

  @@index([smartAccountId])
  @@index([delegateAddress])
}

model Portfolio {
  id               String                @id @default(uuid())
  smartAccountId   String                @unique
  name             String
  portfolioAddress String?               @unique  // On-chain portfolio contract address
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  smartAccount     SmartAccount          @relation(fields: [smartAccountId], references: [id], onDelete: Cascade)
  allocations      PortfolioAllocation[]
  rebalanceLogs    RebalanceLog[]
}

model Token {
  id               String                @id @default(uuid())
  symbol           String                @unique
  name             String
  address          String                @unique
  decimals         Int
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  allocations      PortfolioAllocation[]
  rebalanceLogsIn  RebalanceLog[]        @relation("TokenIn")
  rebalanceLogsOut RebalanceLog[]        @relation("TokenOut")
}

model PortfolioAllocation {
  id          String    @id @default(uuid())
  portfolioId String
  tokenId     String
  percent     Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  amount      Float     @default(0)
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  token       Token     @relation(fields: [tokenId], references: [id])

  @@unique([portfolioId, tokenId])
}

model RebalanceLog {
  id              String    @id @default(uuid())
  portfolioId     String
  tokenInId       String
  tokenOutId      String
  amountIn        Float
  amountOut       Float
  reason          String
  executor        String
  createdAt       DateTime  @default(now())
  blockNumber     String?
  gasUsed         String?
  status          String?
  transactionHash String?   @unique
  userOpHash      String?
  portfolio       Portfolio @relation(fields: [portfolioId], references: [id])
  tokenIn         Token     @relation("TokenIn", fields: [tokenInId], references: [id])
  tokenOut        Token     @relation("TokenOut", fields: [tokenOutId], references: [id])
}

model ContractConfig {
  id              String   @id @default(uuid())
  contractAddress String   @unique
  network         String   @default("monadTestnet")
  owner           String
  paused          Boolean  @default(false)
  updatedAt       DateTime @updatedAt
  name            String   @unique
}

model Bot {
  id           String    @id @default(uuid())
  name         String    @unique
  address      String
  description  String?
  encryptedKey String?
  role         String    @default("bot")
  lastRunAt    DateTime?
  status       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model TokenPrice {
  id            String   @id @default(uuid())
  symbol        String
  usdPrice      Float
  usdMarketCap  Float?
  usd24hVol     Float?
  usd24hChange  Float?
  lastUpdatedAt DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([symbol, lastUpdatedAt])
}

model Analysis {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Memory {
  id        String   @id @default(uuid())
  text      String
  summary   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
